<body>

    <h3 style="text-align: center; color: white; margin-top: 30px;">Formulario de registro</h3>
    <div class="fondo">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="card" style="margin: auto; margin-top: 90px; margin-bottom: 100px;">
                        <div class="card-body">
                            <form action="/coordinadorCreateUser" method="post">
                                <div class="form-group">
                                    <p>Digite la identificacion:</p>
                                    <input type="text" name="user_identification" class="form-control" required>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <p>Digite el nombre:</p>
                                            <input type="text" name="user_name" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <p>Digite el apellido:</p>
                                            <input type="text" name="user_lastname" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <p>Digite el correo:</p>
                                            <input type="text" name="user_email" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <p>Digite la contraseña:</p>
                                            <input type="password" name="user_password" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <p>Digite los estudios:</p>
                                            <input type="text" name="user_studies" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <p>Seleccione tipo docente:</p>
                                            <select name="user_tipoDocente" class="form-control">
                                                <option value="catedra">catedra</option>
                                                <option value="tiempo completo">tiempo completo</option>
                                                <option value="planta">planta</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <p>Seleccione el género:</p>
                                    <select name="user_gender" class="form-control" required>
                                        <option value="masculino">Masculino</option>
                                        <option value="femenino">Femenino</option>
                                    </select>
                                </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card" style="margin: auto; margin-top: 90px; margin-bottom: 100px;">
                        <div class="card-body">
                            <div class="form-group">
                                <p>Seleccione el rol:</p>
                                <select name="role_id" class="form-control" required>
                                    <option value="1">Docente</option>
                                    <option value="2">Decano</option>
                                    <option value="3">Coordinador</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Digite la fecha de inicio:</p>
                                <input type="text" id="date_start" name="date_start" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <p>Digite la fecha fin:</p>
                                <input type="text" id="date_finish" name="date_finish" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Registrar
                            </button>
                            <a href="/coordinadorCRUDuser" class="btn btn-secondary">Cancelar</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <% if(typeof alert !="undefined" ) { %>
            <script>
                Swal.fire({
                    title: '<%= alertTitle %>',
                    text: '<%= alertMessage %>',
                    icon: '<%= alertIcon %>',
                    showConfirmationButton: '<%= showConfirmButton %>',
                    timer: '<%= timer %>'
                }).then(() => {
                    window.location = '/<%= ruta %>'
                })
            </script>
                <% } %>


                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                    crossorigin="anonymous"></script>
                <script>
                    flatpickr("#date_start", {
                        dateFormat: "Y-m-d"
                    });

                    flatpickr("#date_finish", {
                        dateFormat: "Y-m-d"
                    });
                </script>

                <script>
                    var dateStartInput = document.getElementById("date_start");
                    var dateFinishInput = document.getElementById("date_finish");

                    document.querySelector("form").addEventListener("submit", function (event) {
                        var dateStartValue = dateStartInput.value;
                        var dateFinishValue = dateFinishInput.value;

                        if (dateStartValue === "" || dateFinishValue === "") {
                            event.preventDefault();
                            alert("Por favor, seleccione ambas fechas.");
                        }
                    });




                </script>


