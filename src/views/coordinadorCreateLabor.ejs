<style>
    .custom-nav {
        display: flex;
        align-items: center;
    }
    .create-link {
        margin-right: 9000px; 
    }
    
    .navbar {
        display: flex;
        justify-content: space-between;
        position: sticky;
        top: 0;
        left: 0;
        right: 0;
        z-index: 9999;
    }

    .navbar-brand {
        padding: 5;
    }
    
    .table-container {
        margin-top: 70px; 
        overflow: auto;
        height: calc(100vh - 70px); 
        overflow-y: hidden;
    }
    
    .table-container table {
        margin-bottom: 0;
    }
    .navbar {
        position: relative;
        z-index: 1;
    }

    details {
        position: relative;
        display: inline-block;
        z-index: 2;
    }

    details summary {
        cursor: pointer;
    }

    details ul {
        position: absolute;
        top: 100%;
        left: 0;
        display: none;
        margin: 0;
        padding: 0;
        list-style: none;
        background-color: #9b1a1a;
    }

    details ul li {
        width: 100%;
    }

    details ul li a {
        display: block;
        padding: 10px;
        color: #fff;
        text-decoration: none;
        width: 200px;
    }
    details summary {
        cursor: pointer;
        white-space: nowrap; 
    }
    details ul li a:hover {
        background-color: #555;
    }

    details[open] ul {
        display: block;
    }
    .form-group p{
        color: black;
        font-size: 17px;
    }
    .fondo{
            background-image: url(img/fondo2.jpg);
            background-size: cover;
            background-repeat: no-repeat;
            margin-top: -50px;
            height: 740px;
        }
</style>

<body>
    <h3 style="text-align: center; color: white; margin-top: 30px;">Formulario de registro</h3>
    <div class="fondo">
        <div class="container mt-5">
            <div class="mover">
                <div class="col-md-6">
                    <div class="card" style="margin: auto; margin-top: 90px; margin-bottom: 100px;">
                        <div class="card-body">
                            <form action="/createLabor" method="post">
                                <div class="form-group">
                                    <p>Digite el codigo:</p>
                                    <input type="text" name="labor_code" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <p>Digite el nombre:</p>
                                    <input type="text" name="labor_name" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <p>Digite el tipo labor:</p>
                                    <select name="type_labor_code" class="form-control" required>
                                        <option value="">Seleccionar opci√≥n</option>
                                        <option value="AD">Administracion</option>
                                        <option value="AS">Asesoria</option>
                                        <option value="C">Capacitacion</option>
                                        <option value="D">Docencia</option>
                                        <option value="E">Extension</option>
                                        <option value="OS">Otros Servicios</option>
                                        <option value="PI">Proyectos Investigacion</option>
                                        <option value="S">Servicios</option>
                                        <option value="TD">Trabajos Docencia</option>
                                        <option value="TI">Trabajos Investigacion</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <p>Ingrese la descripcion:</p>
                                    <input type="text" name="labor_descripcion" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <p>Digite las horas:</p>
                                    <input type="text" name="labor_hours" class="form-control" required>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    Registrar 
                                </button>
                                <a href="/coordinadorCrudLabor"class="btn btn-secondary">Cancelar</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>