<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diligenciar autoevaluacion</title>
    <link rel="preload" href="css/style.css" as=" style">
    <link href="css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-******************************" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

    <nav class="navbar bg-dark">
        <form class="container-fluid justify-content-between" style="margin-top: 10px;">
            <a class="navbar-brand home-link" href="/coordinadorPrincipal"><i class="fas fa-home"></i></a>
            <a class="btn btn-info" href="/coordinadorBandejaEntrada">Bandeja de entrada</a>
            <a class="btn btn-primary" href="/coordinadorListPeriods">Periodo academico</a>
            <a class="btn btn-primary" href="/coordinadorCreateLaborView">Registrar Labor</a>
            <a class="btn btn-primary" href="/coordinadorCrudAutoevaluacion">Gestion autoevaluaci贸n</a>
            <a class="btn btn-primary" href="/coordinadorCRUDuser">Gesti贸n Docentes</a></li>
        </form>
    </nav>
    <br>
   
    <div class="fondo">
        <% if(data && data.length > 0) { %>
            <h3>nombre: <%= data[0].user_name + ' ' + data[0].user_lastname %></h3>
            <h3>identificacion: <%= data[0].user_identification %></h3>
        <% } %>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-12 table-container">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <th>N</th>
                            <th>nombre labor</th>
                            <th>tipo labor</th>
                            <th>horas</th>
                            <th>descripcion</th>
                            <th>acto</th>
                            <th>fecha inicio</th>
                            <th>fecha fin</th>
                            <th>estado</th>
                            <th>resultados</th>
                            <th>evaluacion</th>
                            <th>periodo</th>
                            <th>recomendaciones</th>
                        </thead>
                        <tbody>
                            <% let totalLaborHours = 0; %>
                            <% if(data) { %>
                                <% for (var i = 0; i < data.length ; i++){ %>
                                    <% if(data[i].activo !== 1) { continue; } %> 
                                    <tr>
                                        <td><%= data[i].autoevaluation_id %></td>
                                        <td><%= data[i].labor_name %></td>
                                        <td><%= data[i].type_labor_name %></td>
                                        <td><%= data[i].labor_hours %></td>
                                        <td><%= data[i].labor_descripcion %></td>
                                        <td><%= data[i].acto %></td>
                                        <td>
                                            <% if (data[i].date_init instanceof Date) { %>
                                                <%= data[i].date_init.toISOString().substring(0, 10) %>
                                            <% } %> 
                                        </td>
                                        <td>
                                            <% if (data[i].date_finish instanceof Date) { %>
                                                <%= data[i].date_finish.toISOString().substring(0, 10) %>
                                            <% } %> 
                                        </td>
                                        <td><%= data[i].state %></td>
                                        <td><%= data[i].resultados %></td>
                                        <td><%= data[i].evaluacion %></td>
                                        <td><%= data[i].period_name %></td>
                                        <td><%= data[i].recomendaciones %></td>
                                        <td>
                                            <% if (data[i].state === 'suspendido' || data[i].state === 'terminado') { %>
                                                <a class="btn btn-info disabled" href="/coordinadorDiligenciarAutoevaluacionView/<%= data[i].autoevaluation_id %>">Realizar autoevaluaci贸n</a>
                                            <% } else { %>
                                                <a class="btn btn-info" href="/coordinadorDiligenciarAutoevaluacionView/<%= data[i].autoevaluation_id %>">Realizar autoevaluaci贸n</a>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% totalLaborHours += parseInt(data[i].labor_hours, 10); %>
                                <% }%>   
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <h3 style="text-align: center; color: white; margin-top: 30px;">Total horas: <%= totalLaborHours %></h3>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert != "undefined") { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>' ,
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmationButton: <%= showConfirmButton %>,
                timer:<%= timer %>
            }).then(()=>{
                window.location='/<%= ruta %>'
            })
        </script>
    <% } %>
</body>
</html>